pipeline {
  agent {
    kubernetes {
      yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    some-label: some-label-value
spec:
  containers:
  - name: playwright
    image: mcr.microsoft.com/playwright:focal
    command:
    - cat
    tty: true
"""
    }
  }
  stages {
    stage('Run maven') {
      steps {
        container('jnpl') {
          git credentialsId: 'test', url: 'git@github.com:Teamwork/qa-playwright-frontend-tests.git'
        }
        container('playwright') {
          sh 'npm install'
        }
        container('playwright') {
          sh 'npm run projects'
        }
        container('playwright') {
          sh 'npm run desk'
        }
      }
    }
  }
}