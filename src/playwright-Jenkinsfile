pipeline {
  agent {
    kubernetes {
      yaml """
apiVersion: v1
kind: Pod
metadata:
spec:
  containers:
  - name: playwright
    image: mcr.microsoft.com/playwright:focal
    command:
    - cat
    tty: true
    env:
    - name: FOLIO_JUNIT_OUTPUT_NAME
      value: junit.xml
"""
    }
  }
  stages {
    stage('Build') {
      steps {
        container('jnpl') {
          git credentialsId: 'test', url: 'git@github.com:Teamwork/qa-playwright-frontend-tests.git'
        }
        container('playwright') {
          sh 'npm install'
          sh 'echo $FOLIO_JUNIT_OUTPUT_NAME'
        }
      }
    }
    stage('Projects tests') {
      steps {
        container('playwright') {
          sh 'npm run projects'
        }
      }
    }
    stage('Desk tests') {
      steps {
        container('playwright') {
          sh 'npm run desk'
        }
      }
    }
  }
}
