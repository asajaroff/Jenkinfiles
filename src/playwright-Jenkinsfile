podTemplate(containers: [containerTemplate(name: 'playwright', image: 'mcr.microsoft.com/playwright:focal', ttyEnabled: true, command: 'cat')])
{
    node(POD_LABEL) {
        stage('Code Checkout') {
            git credentialsId: 'test', url: 'git@github.com:Teamwork/qa-playwright-frontend-tests.git'

        container('playright') {
                stage('Chromium Projects critical') {
                    steps {
                        sh 'npm install'
                        sh 'npm run test'
                    }
                }
            }
        }
    }
}